extends layout

block content
  h1= title
  div= errorMessage
  form.sign-in-form(action='/auth/local' method='POST')
    div.form-group
      input#id(type='text' name='id' placeholder='아이디를 입력하세요' required='')
    div.form-group
      input#password(type='password' name='password' placeholder='비밀번호를 입력하세요' required='')
    button#sign-in-btn(type='submit') 로그인
  button#sign-up-btn(onclick="location.href='/sign-up'") 회원가입
