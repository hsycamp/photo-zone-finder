
if comments
    .ui.comments
        for comment in comments
            if comment.display === true
                .comment(id=comment._id)
                    a.avatar
                        img(src='/images/avatar.png')
                    .content
                        a.author(href=`/user-page/${comment.publisher}`)
                            | #{comment.publisher}
                        if comment.publisher === user.id 
                            span.right.floated
                                i#comment-delete-btn.trash.icon(style="cursor:pointer")
                        .text
                            | #{comment.content}