
if comments
    .ui.comments
        for comment in comments
            if comment.display === true
                .comment(id=comment._id)
                    a.avatar
                        img(src='/images/avatar.png')
                    .content
                        a.author(href=`/user-page/${comment.publisher}`)
                            | #{comment.publisher}
                        span.right.floated   
                            if comment.publisher === user.id 
                                i#comment-delete-btn.trash.icon(style="cursor:pointer")
                        .text
                            | #{comment.content}
                        #published-date(style="color:#A2A2A2;font-size:12px;")
                            | #{moment(comment.publishedDate).fromNow()}
                        